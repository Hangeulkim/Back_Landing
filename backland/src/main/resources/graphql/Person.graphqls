type Query{
    getPeople(auth: String, request: SearchRequest): [PhoneResponse]
}

type Mutation{
    createOrUpdatePerson(auth: String, request: PhoneRequest) : PhoneResponse!
    deletePerson(auth: String, request: DeleteRequest): Float
}

type PhoneResponse{
    name: String
    phoneNumber: String
}

input SearchRequest{
    name: String
    phone: String
}

input PhoneRequest{
    name: String!
    phone: String!
}

input DeleteRequest{
    phone: String!
}